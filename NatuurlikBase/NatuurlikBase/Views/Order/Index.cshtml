{
    <div class="alert alert-warning  alert-dismissible fade show" role="alert" id="success-alert">
 
         <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill"/></svg>
       &nbsp @TempData["Delete"]

    </div>
 

}


    @{
        var status = Context.Request.Query["status"];
        var processing = "text-primary";
        var pending = "text-primary";
        var dispatched = "text-primary";
        var cancelled = "text-primary";
        var refundpending = "text-primary";
        var refunded = "text-primary";
        var all = "text-primary";

        //switch statement to filter orders list by status conditionally

        switch(status)
        {
            case "processing":
                processing = "active text-white";
                break;

            case "pending":
                pending = "active text-white";
                break;

            case "dispatched":
                dispatched = "active text-white";
                break;

            case "cancelled":
                cancelled = "active text-white";
                break;

                case "refundpending":
                refundpending = "active text-white";
                break;

            case "refunded":
                refunded = "active text-white";
                break;

            default:
                all = "active text-white";
                break;



        }
    }
   

 <div class="container-fluid">
     <div class="d-flex-column justify-content-between justify-content-start">
            <div class="col-10 col-sm-10 col-md-10 p-2">
                @if(User.IsInRole(SR.Role_Admin) || User.IsInRole(SR.Role_SA))
                {
                    <h2 class="cheading">Orders List:</h2>
                }
                else
                {
                    <h2 class="cheading">My Natuurlik Orders:</h2>
                }
            
		</div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
               
                 @if(User.IsInRole(SR.Role_Admin) || User.IsInRole(SR.Role_SA) || User.IsInRole(SR.Role_Reseller) )
                    {
                         <a class="button-88 mx-1" role="button"  asp-controller="Order" asp-action="Index" asp-route-status="pending">
                    <li class="list-group-item" @pending>Pending</li>
                </a>
                    }
                   
                 <a class="button-88 mx-1"  asp-controller="Order" asp-action="Index" asp-route-status="processing">
                    <li class="list-group-item" @processing>Processing</li>
                </a>
                 <a class="button-88 mx-1" asp-controller="Order" asp-action="Index" asp-route-status="dispatched">
                    <li class="list-group-item" @dispatched>Dispatched</li>
                </a>

               @*  @if(User.IsInRole(SR.Role_Admin))
                    {
                    <a class="button-88 mx-1"  asp-controller="Order" asp-action="Index" asp-route-status="refundpending">
                    <li class="list-group-item" @refundpending>Pending Refund</li>
                    </a>
               
                  <a class="button-88 mx-1" asp-controller="Order" asp-action="Index" asp-route-status="refunded">
                    <li class="list-group-item" @refunded>Refunded</li>
                </a>
                 
                    }*@
                    <a class="button-88 mx-1" asp-controller="Order" asp-action="Index" asp-route-status="cancelled">
                    <li class="list-group-item" @cancelled>Cancelled</li>
                </a>
               
                  <a class="button-89 mx-1" style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="all">
                    <li class="list-group-item" @all>Clear Filter</li>
                </a>
                </ul>
        </div>
     
	</div>
