<table class="table" id="tblData" style="background-color: #232323">
    <thead>
        <tr>
            <th class="text-light">
                First Name
			</th>
               <th class="text-light">
                Surname
			</th>
             <th class="text-light">
                Phone Number
			</th>
             <th class="text-light">
                Email Address
			</th>
             <th class="text-light">
                Status
			</th>
             <th class="text-light">
                Total
			</th>
            <th class="text-light">Action</th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.FirstName                                       
				</td>
                <td>
                    @obj.Surname
                </td>
                <td>
                    @obj.PhoneNumber
                </td>
                 <td>
                    @obj.ApplicationUser.Email
                </td>
                 <td>
                    @obj.OrderStatus
                </td>
                 <td>
                    @obj.OrderTotal
                </td>
                
                <td>
                    <div class="btn-group" role="group">
                        <a href="/Order/Detail?orderId=@obj.Id" class="btn btn-sm editbtn"> <i class="bi bi-pencil-square"></i>&nbsp; Details</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
