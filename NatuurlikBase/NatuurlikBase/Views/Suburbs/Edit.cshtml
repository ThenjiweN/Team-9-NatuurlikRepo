@model NatuurlikBase.Models.Suburb

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

<div id="page-content-wrapper">
    <form asp-action="Edit">
	
        <div>
            @if(ViewBag.Error==null){
            <div class="card">
                <div class="card-header" style="background-color: #F2F2F2">
                    <h5>Update Suburb</h5>
                </div>
                <div class="card-body">
		    @*<div asp-validation-summary="All"></div>*@
		         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="SuburbName" class="control-label"></label>
                    <input asp-for="SuburbName" class="form-control col-md-10" />
                    <span asp-validation-for="SuburbName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control col-md-10" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    
                    <label asp-for="CityId" class="control-label">City Name</label>
                    <select asp-for="CityId" class="form-control col-md-10" asp-items="ViewBag.CityId"></select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                 
                </div>
		
		    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal" style="width:150px">Update</button>
		    <a asp-controller="Suburbs" asp-action="Index"  class="btn btn-outline-dark" style="width:150px">
			    Cancel
		    </a>
	    </div>
            </div>
               }
            </div>
    
	     <div class="modal fade" id="exampleModal">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header border-0">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>

                        </div>
                        <div class="modal-body">
                            <h6 class="col-md-10"> 
                           Confirm Suburb Details
                        </h6>
                        </div>

                        <div class="modal-footer border-0">
                            <div class="form-actions no-color">
                                <input type="submit" value="Confirm" class="btn btn-success" style="width:150px;"/> 
                                <button type="button" class="btn btn btn-outline-dark" data-dismiss="modal" style="width:150px;">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal fade" id="exampleModal1" data-bs-backdrop="static" data-bs-keyboard="false">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header  border-0">
                          

                        </div>
                          <h6 class="col-md-10">
                       Suburb Already Exists
                    </h6>

                        <div class="modal-footer  border-0">
                            <div class="form-actions no-color">
                                <input type="button" value="Okay" class="btn btn-outline-dark" data-bs-dismiss="modal"onclick="location.href='@Url.Action("Index", "Suburbs")'" />

                            </div>
                        </div>

                    </div>
                </div>
            </div>
    </form>
</div>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
      @if (ViewBag.Error != null)
    {
        <script>



            $(function () {
                $("#exampleModal1").modal("show");
                $("#b1").modal("hide");
            });


        </script>
    }

    @if (ViewBag.Confirmation != null)
    {
        <script>



            $(function () {
                $("#exampleModal").modal("show");
            });


        </script>
    }
}
